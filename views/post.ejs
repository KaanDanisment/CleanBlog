<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.detail %></h2>
            <span class="meta">Posted by
              on <%= post.dateCreated.toLocaleDateString() %></span>
              <div class="mybtn" >
                <a href="/post/edit/<%= post._id%>" class="btn btn-danger" style="border-radius: 15px;"><span>Update Details</span></a>
                <a href="/post/<%= post._id %>?_method=DELETE" class="btn btn-danger" style="border-radius: 15px;"><span>Delete</span></a>	
              </div>
          </div>
          
        </div>
      </div>
    </div>
  </header>

  

  <%- include('partials/_footer') -%>

</body>

</html>
